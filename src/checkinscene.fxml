<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <ImageView fitHeight="400.0" fitWidth="606.0" pickOnBounds="true">
         <image>
            <Image url="@sample/background.jpg" />
         </image>
      </ImageView>
      <RadioButton fx:id="cashbutton" layoutX="48.0" layoutY="87.0" mnemonicParsing="false" text="Cash">
         <font>
            <Font size="15.0" />
         </font></RadioButton>
      <RadioButton fx:id="visabutton" layoutX="49.0" layoutY="147.0" mnemonicParsing="false" text="VISA">
         <font>
            <Font size="15.0" />
         </font></RadioButton>
      <Button layoutX="458.0" layoutY="312.0" mnemonicParsing="false" onAction="#approvecheckin" text="Approve" />
      <Text fx:id="cardnumber" layoutX="48.0" layoutY="234.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Card number" visible="false" />
      <Text fx:id="securitycode" layoutX="48.0" layoutY="296.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Security code" visible="false" />
      <TextField fx:id="cardnumbertxt" layoutX="142.0" layoutY="216.0" visible="false" />
      <TextField fx:id="securitycodetxt" layoutX="142.0" layoutY="278.0" visible="false" />
      <Button fx:id="visapayment" layoutX="93.0" layoutY="325.0" mnemonicParsing="false" onAction="#visapayment" text="Done" visible="false" />
      <Text layoutX="66.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Payment Method">
         <font>
            <Font size="18.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
